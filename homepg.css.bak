}

h1 {
	font-family: righteous;
	color: white;
	text-align: center;
	font-size: 50px;	
}

.grid-homepage {
	display:grid;
	grid-template-columns:1fr 1fr;
	grid-gap: 50px;
	margin-left: 100px;
	margin-right:100px;	
	text-align: center;
	font-size: 20px;
}

p {
	margin-right:0;
	padding: 50;
	font-family: oswald;
}

.item {
	color:grey;
	grid-column: span 1;
}

.item2 {
	color:black;
}

.bar {
	display:grid;
	grid-template-columns: 1fr 1fr 1fr 1fr;
	grid-gap: 70px;
	margin-left:10%;
	text-align: left;
}

.bar1 {
	grid-column: span 1;
}

a {
    background-color: red;
	box-shadow: 0 5px 0 darkred;
	color: white;
	padding: 1em;
	text-decoration: none;
	text-transform: uppercase;
	font-family: oswald;
	color: black
}

a:hover {
  background-color: #ce0606;
  cursor: pointer;
}

a:active {
  box-shadow: none;
  top: 5px;
}

.loader {
    border: 16px solid #f3f3f3; /* Light grey */
    border-top: 16px solid #3498db; /* Blue */
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 2s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.trash {

		display:grid;
